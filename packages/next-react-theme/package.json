{
  "name": "next-react-theme",
  "version": "0.1.6",
  "description": "A flexible theme provider for Next.js and react applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./themes.css": "./dist/themes.css"
  },
  "scripts": {
    "prepublishOnly": "pnpm build",
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "tsc",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "react",
    "nextjs",
    "theme",
    "dark-mode",
    "light-mode",
    "next-theme",
    "react-theme",
    "theme-provider"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/San1ay/next-react-theme.git"
  },
  "peerDependencies": {
    "react": "^16.8 || ^17 || ^18 || ^19 "
  },
  "publishConfig": {
    "access": "public"
  }
}